{{#slider_foursection_enabled}}
  <div id="mooveslideshow_foursection" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
      {{#slides_foursection}}
        <li data-target="#mooveslideshow_foursection" data-slide-to="{{{ key }}}" {{#active}}class="active"{{/active}}></li>
      {{/slides_foursection}}
    </ul>
    <div class="carousel-inner">
      {{#slides_foursection}}
        <div class="carousel-item {{#active}}active{{/active}}" data-link = "{{ imgurl }}">
          <img class="d-block w-100 animated fadeIn" src="{{{ image }}}" alt="{{{ slidercap }}}">
          <div class="carousel-caption d-none d-md-block animated fadeInRightBig">
            {{#title}}<h2 class="title">{{{ title }}}</h2>{{/title}}

            {{#caption}}<div class="caption">{{{ caption }}}</div>{{/caption}}
          </div>
        </div>
      {{/slides_foursection}}
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#mooveslideshow_foursection" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#mooveslideshow_foursection" data-slide="next">
      <span class="carousel-control-next-icon"></span>
    </a>   
  </div>
  <!-- class="embed-responsive-item"Ver más para sabías que -->
  <div class="ver-mas">
    <a class="btn" href="#bannerformmodal" data-toggle="modal" data-target="#modal-video">Ver más...</a>
    <!-- The Modal -->
    <div class="modal" id="modal-video">
      <div class="modal-dialog">
        <div class="modal-content">
        
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">¿Sabías qué?</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          
          <!-- Modal body -->
          <div class="modal-body">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/QJz9wNB_xOU" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            </div>
          </div>
          
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
          </div> 
        </div>
      </div>
    </div><!-- End Modal -->
  </div><!-- End div ver-mas -->
{{/slider_foursection_enabled}}