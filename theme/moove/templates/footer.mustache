{{!
    @template theme_moove/footer

    Footer template

    Example context (json): {}
}}
<div id="top-footer">
  <div class="container-fluid">
    <div class="row d-flex flex-row">
        <div class="col-md-7 contact">
            <h3>{{{gettitlestayintouch}}}</h3>
            <h4>{{{getintouchcontent}}}</h4>
            <ul>
                {{#website }}<li class="contact_li"><a href="{{ website }}" target="_blank"><i class="icon-globe"></i>{{{ website }}}</a></li>{{/website}}
                {{#mobile}}<li class="contact_li"><i class="icon-phone"></i>{{{ mobile }}}</li>{{/mobile}}
                {{#mail}}<li class="contact_li"><a href="mailto:{{ mail }}" target="_blank"><i class="icon-envelope"></i>{{{ mail }}}</a></li>{{/mail}}
                {{#address}}<li class="contact_li"><i class="icon-location-pin"></i>{{{ address }}}</li>{{/address}}
            </ul>
        </div>
        <div class="col-md-5 social mt-auto">
          <ul>
              {{#facebook}}
                <li>
                  <a href="{{{facebook}}}" target="_blank" class="facebook">
                    <img src="{{ facebook_icon }}" />
                  </a>
                </li>
              {{/facebook}}

              {{#twitter}}
                <li>
                  <a href="{{{twitter}}}" target="_blank" class="twitter">
                    <img src="{{ twitter_icon }}" />
                  </a>
                </li>
              {{/twitter}}

              {{#googleplus}}
                <li>
                  <a href="{{{googleplus}}}" target="_blank" class="googleplus">
                    <i class="icon-social-gplus"></i>
                  </a>
                </li>
              {{/googleplus}}

              {{#linkedin}}
                <li>
                  <a href="{{{linkedin}}}" target="_blank" class="linkedin">
                    <i class="icon-social-linkedin"></i>
                  </a>
                </li>
              {{/linkedin}}

              {{#youtube}}
                <li>
                  <a href="{{{youtube}}}" target="_blank" class="youtube">
                    <img src="{{ youtube_icon }}" />
                  </a>
                </li>
              {{/youtube}}

              {{#instagram}}
                <li>
                  <a href="{{{instagram}}}" target="_blank" class="instagram">
                    <i class="icon-social-instagram"></i>
                  </a>
                </li>
              {{/instagram}}
          </ul>

          {{{ output.standard_footer_html }}}
        </div>
    </div>
  </div>
</div>

{{^disablebottomfooter}}
  <footer id="page-footer" class="p-y-1">
      <div class="container-fluid">
          <div id="course-footer">{{{ output.course_footer }}}</div>

          <div class="madewithmoodle">
              <p>{{#str}}madewitmoodle, theme_moove{{/str}}</p>
              <a href="https://moodle.org"><img src="{{output.get_pix_image_url_base}}/moodle-logo-white.png" alt="Moodle logo"></a>
          </div>

          <div class="madeby">
              <p>{{#str}}madeby, theme_moove{{/str}} <i class="text-danger fa fa-heart"></i> {{#str}}by, theme_moove{{/str}} <a href="http://conecti.me">conecti.me</a></p>
          </div>
      </div>
  </footer>
{{/disablebottomfooter}}

{{{ output.standard_end_of_body_html }}}