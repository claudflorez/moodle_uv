{{!
    Page header.

    @template theme_academi/header

    Admin time setting template.

    Academi header layout template.
}}
<header id="header" role="banner" class="pos-f-t navbar navbar-full navbar-light bg-faded navbar-static-top moodle-has-zindex">

    <div class="container navbar-nav">

        <div data-region="drawer-toggle">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn pull-xs-left m-r-1 btn-secondary" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">
            <span class="hidden-xl-down" aria-hidden="true">&#9776;</span>
            <span class="sr-only hidden-xl-down">{{#str}}expand, core{{/str}}</span>
            <span aria-hidden="true"> </span>
            <span aria-hidden="true"> </span>
            <span aria-hidden="true"> </span>
          </button>
        </div>

        <!-- user_menu -->
        {{{ output.user_menu }}}

        <!-- navbar_plugin_output -->
        {{{ output.navbar_plugin_output }}}

        <!-- search_box -->
        <span class="hidden-md-down">
        {{{ output.search_box }}}
        </span>

        <nav class="nav navbar-nav hidden-md-down">
            {{# phoneno}}
                <span><i class="fa fa-phone"></i>{{s_callus}} : {{ phoneno }}</span>
            {{/ phoneno}}
            {{# emailid}}
                <span><i class="fa fa-envelope-o"></i>{{s_email}} : <a href="mailto:{{emailid}}">{{ emailid }}</a></span>
            {{/ emailid}}
         </nav>

    </div>
</header>

<div class="header-main">
    <div class="container">

	<nav class="navbar navbar-light bg-faded">
                <a href="{{{ config.wwwroot }}}/?redirect=0" class="navbar-brand {{# logourl }}has-logo{{/ logourl }}
                {{^ logourl }}
                    hidden-sm-down
                {{/ logourl }}
                    ">
                {{# logourl }}
                    <span class="logo">
                        <img src="{{logourl}}" alt="{{sitename}}">
                    </span>
                {{/ logourl }}
                {{^ logourl }}
                    <span class="site-name hidden-sm-down">{{{ sitename }}}</span>
                {{/ logourl }}
                </a>

	<button class="{{navbarclass}}" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>

	<div class="collapse navbar-toggleable-md" id="navbarResponsive">

        <div class="infoarea ">
            <!-- custom_menu -->
            {{{ output.custom_menu }}}
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
        </div>

    </div>
    </nav>

    </div>
</div>


