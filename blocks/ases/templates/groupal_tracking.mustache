<!-- MODAL ANTIGUO-->
<div class="modal modal_pilos" id="myModal" name="seguimiento" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Seguimiento</h4>
         </div>
         <div class="modal-body">
            <form class="form-horizontal" id = "seguimiento" role="form">
               <div class= "form-group hide" id="div_created">
                  <div class="col-md-4">
                     <label type="text" class="" id="created_date" name="created_daydate"></label>
                  </div>
               </div>
               <div class= "form-group">
                  <div class="col-md-4">
                     <label for="date" class="form-control-label col-md-3">Fecha (aaaa-mm-dd)</label>
                     <div class="col-md-9">
                        <input type="date" class="form-control" id="date" name="date" >
                        </input>
                     </div>
                  </div>
                  <div class="col-md-4">
                     <label for="place" class="form-control-label col-md-2">Lugar</label>
                     <div class="col-md-10">
                        <input type="text" maxlength = "20" size="20" class="form-control" id="place" name="place" >
                     </div>
                  </div>
               </div>
               <hr>
               <div class= "form-group">
                  <div data-spy="scroll" data-target=".navbar" data-offset="50" class="well col-md-7 col-md-offset-3" id="list_grupal_seg_consult" name="list_grupal_seg_consult">
                     <table id="mytable_consult" class="table table-striped">
                        <thead>
                           <tr>
                              <th>Código</th>
                              <th>Nombre</th>
                              <th>Apellido</th>
                              <th>Presente</th>
                           </tr>
                        </thead>
                        <tbody id="mytbody"></tbody>
                     </table>
                  </div>
               </div>
               <div class= "form-group">
                  <div class="col-md-6">
                     <label for="h_ini" class="form-control-label col-xs-3 col-sm-3">Hora de Inicio</label>
                     <div class="col-xs-4 col-sm-3">
                        <select  class="form-control" id="h_ini" name="h_ini" ></select>
                     </div>
                     <label class="col-xs-1 col-sm-1" for="m_ini">:</label>
                     <div class="col-xs-4 col-sm-3">
                        <select class="form-control" id="m_ini"  name="m_ini"></select>
                     </div>
                  </div>
                  <div class="col-md-6">
                     <label for="h_fin" class="form-control-label col-xs-3 col-sm-3">Hora finalización</label>
                     <div class="col-xs-4 col-sm-3">
                        <select class="form-control" id="h_fin" name="h_fin"></select>
                     </div>
                     <label class="col-xs-1 col-sm-1" for="m_fin">:</label>
                     <div class="col-xs-4 col-sm-3">
                        <select class="form-control" id="m_fin" name="m_fin" ></select>
                     </div>
                  </div>
               </div>
               <div class="form-group" id="infomonitor">
                  <label for="monitor" class="form-control-label col-xs-2 col-sm-2">Monitor guía</label>
                  <span class="col-sm-4" id="monitor"></span>
               </div>
               <hr>
               <hr>
               <div class= "form-group">
                  <label for="tema" class="form-control-label col-md-6">Tema</label>
                  <label for="objetivos" class="form-control-label col-md-6">Objetivos</label>
                  <div class="col-md-6">
                     <div class="col-md-10">
                        <textarea  class="form-control small" id="tema" name="tema" maxlength="1000"></textarea>
                     </div>
                  </div>
                  <div class="col-md-6">
                     <div class="col-md-10">
                        <textarea class="form-control small" id="objetivos" name="objetivos" maxlength="1000"></textarea>
                     </div>
                  </div>
               </div>
               <hr>
               <div class= "form-group">
                  <label for="actividades" class="form-control-label col-md-6">Actividades</label>
                  <label for="observaciones" class="form-control-label col-md-6">Observaciones</label>
                  <div class="col-md-6">
                     <div class="col-md-10">
                        <textarea  class="form-control long" id="actividades" name="actividades" maxlength="5000"></textarea>
                     </div>
                  </div>
                  <div class="col-md-6">
                     <div class="col-md-10">
                        <textarea class="form-control long" id="observaciones" name="observaciones" maxlength="5000"></textarea>
                     </div>
                  </div>
               </div>
            </form>
         </div>
         <div class="modal-footer">
            <button type="button" class="button btn btn-secondary" data-dismiss="modal" id="close_seg">Cerrar</button>
            <button type="button" class="button btn btn-primary hide" id="save_seg">Guardar</button>
            <button type="button" class="button btn btn-primary hide" id="upd_seg">Editar</button>
            <button type="button" class="button btn btn-primary hide" id="edit_seg">Actualizar</button>
         </div>
      </div>
   </div>
</div>
<!--FIN  MODAL ANTIGUO-->
