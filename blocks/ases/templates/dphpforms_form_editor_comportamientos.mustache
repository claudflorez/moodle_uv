{{#data}}
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                <h2>Editor de disparadores/comportamientos</h2>
                <hr>   
                <a id="dphpforms-redirect-adm-forms" href="javascript:void(0)" class="btn btn-sm btn-default">Administrar formularios</a>
                <hr>
            </div>
        </div>
      {{#comportamientos_disparadores}}
        <div ckass="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                    #ID: <strong>{{id}}</strong> - #ID Formulario: <strong> {{id_formulario}} </strong>
                </div>
                <div class="form-group">
                    <textarea id="disparadores-{{id}}" rows="15" class="form-control">
                        {{disparadores}}
                    </textarea>
                </div>
                <div class="form-group">
                    <a id="actualizar-disparadores" href="javascript:void(0)" class="btn btn-danger btn-dphpforms btn-dphpforms-univalle" data-disparadores-id="{{id}}">Actualizar bloque de comportamientos</a>
                </div>
            </div>
        </div>
      {{/comportamientos_disparadores}}
    </div>
</body>
{{/data}}
